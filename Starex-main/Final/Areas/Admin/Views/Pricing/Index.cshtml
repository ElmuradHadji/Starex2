@model List<PricingGetDto>
@{
    ViewData["Title"] = "Tariflər";
    int count = 1;
}

<div class="grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tariflər</h4>
            <p class="card-description">
                <a type="submit" class="btn btn-success" asp-action="Create"><i class="mdi mdi-plus"></i></a>
            </p>
            <div class="table-responsive">
                @if (Model.Count is 0)
                {
                    <partial>Məlumat tapılmadı!</partial>
                }
                else
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Ölkə</th>
                                <th>Min</th>
                                <th>Max</th>
                                <th>Qiymət</th>
                                <th>Sazlamalar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>

                                    @foreach (var country in ViewBag.countries)
                                    {
                                        if (item.CountryId == country.Id)
                                        {
                                            <td>@country.Name</td>
                                        }
                                    }
                                    <td>@item.MinKG</td>
                                    <td>@item.MaxKG</td>
                                    <td>@item.Price</td>


                                    <td>

                                        <a class=" btn btn-light" asp-action="Update" asp-route-id="@item.Id"><i class="mdi mdi-pencil"></i></a>
                                        <a class=" btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="mdi mdi-delete-variant"></i></a>
                                    </td>
                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
