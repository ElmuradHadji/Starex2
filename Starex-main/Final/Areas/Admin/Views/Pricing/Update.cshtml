@model PricingUpdateDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xarici anbar</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="pricingPostDto.MinKG"></label>
                    <input asp-for="pricingPostDto.MinKG" value="@Model.pricingGetDto.MinKG" class="form-control" placeholder=" min Çəkini daxil edin...">
                    <span class="text text-danger" asp-validation-for="pricingPostDto.MinKG"></span>
                </div>
                <div class="form-group">
                    <label asp-for="pricingPostDto.MaxKG"></label>
                    <input asp-for="pricingPostDto.MaxKG" value="@Model.pricingGetDto.MaxKG" class="form-control" placeholder=" max Çəkini daxil edin...">
                    <span class="text text-danger" asp-validation-for=" pricingPostDto.MaxKG"></span>
                </div>
                <div class="form-group">
                    <label asp-for="pricingPostDto.Price"></label>
                    <input asp-for="pricingPostDto.Price" value="@Model.pricingGetDto.Price" class="form-control" placeholder=" Qiyməti daxil edin...">
                    <span class="text text-danger" asp-validation-for="pricingPostDto.Price"></span>
                </div>

                <div class="form-group">
                    <label asp-for="pricingPostDto.CountryId">Ölkə</label>
                    <select asp-for="pricingPostDto.CountryId" class="form-control">
                        <option>
                            Ölkəni Seç
                        </option>
                        @foreach (var country in ViewBag.countries)
                        {
                            if (country.Id == Model.pricingGetDto.CountryId)
                            {
                                <option selected value="@country.Id">@country.Name</option>

                            }
                            if (country.Id != Model.pricingGetDto.CountryId)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="pricingPostDto.CountryId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="pricingPostDto.CurrencyId">Valyuta</label>
                    <select asp-for="pricingPostDto.CurrencyId" class="form-control">
                        <option>
                            Valyutanı Seç
                        </option>
                        @foreach (var currency in ViewBag.currencies)
                        {
                            if (currency.Id == Model.pricingGetDto.CurrencyId)
                            {
                                <option selected value="@currency.Id">@currency.Name</option>

                            }
                            if (currency.Id != Model.pricingGetDto.CurrencyId)
                            {
                                <option value="@currency.Id">@currency.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="pricingPostDto.CountryId"></span>
                </div>
                <input  hidden asp-for="pricingGetDto.Id" value="@Model.pricingGetDto.Id"/>
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>
