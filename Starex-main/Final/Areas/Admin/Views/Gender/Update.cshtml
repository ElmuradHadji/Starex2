@model GenderUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cins</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="genderPostDto.Name">Cins</label>
                    <input asp-for="genderPostDto.Name" value="@Model.genderGetDto.Name" class="form-control" placeholder=" Cins adını daxil edin...">
                    <span class="text text-danger" asp-validation-for="genderPostDto.Name"></span>
                </div>
                <input type="hidden" asp-for="@Model.genderGetDto.Id" value="@Model.genderGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>

