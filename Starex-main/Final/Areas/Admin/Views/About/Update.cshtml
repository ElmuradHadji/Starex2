@model AboutUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description"> Basic form layout </p>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="@Model.aboutPostDto.Text"></label>
                    <input asp-for="@Model.aboutPostDto.Text"  value="@Model.aboutGetDto.Text" class="form-control" placeholder="Haqqımızda mətni...">
                    <span class="text text-danger" asp-validation-for="aboutPostDto.Text"></span>

                </div><div class="form-group">
                    <label asp-for="@Model.aboutPostDto.formFile">Şəkil</label>
                    <input asp-for="@Model.aboutPostDto.formFile" accept="image/*" class="form-control" placeholder="Haqqımızda mətni...">
                    <span class="text text-danger" asp-validation-for="aboutPostDto.formFile"></span>

                </div>
                <input hidden asp-for="@Model.aboutGetDto.Id" value="@Model.aboutGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
            <div class="mt-2">
                <img style="height:250px; width:250px;" src="~/assets/images/@Model.aboutGetDto.Image" alt="Haqqında_Şəkil" />
            </div>
        </div>
    </div>
</div>
