@model CountryPostDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ölkə</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Name"> Ad</label>
                    <input asp-for="Name" class="form-control" placeholder=" Ölkə adını daxil edin...">
                    <span class="text text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="formFile">Bayraq</label>
                    <input asp-for="formFile" class="form-control" placeholder=" Iconu daxil edin...">
                    <span class="text text-danger" asp-validation-for="formFile"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CurrencyId">Valyuta</label>
                    <select asp-for="CurrencyId" class="form-control">
                        <option>
                            Valyutanı Seç
                        </option>
                        @foreach (var currency in ViewBag.Currencies)
                        {
                            <option value="@currency.Id">@currency.Name</option>
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="CurrencyId"></span>
                </div>

                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>

