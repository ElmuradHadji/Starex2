@model PackageStatusUpdateDto
@{
    ViewData["Name"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-Name">Default form</h4>
            <p class="card-description"> Basic form layout </p>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="@Model.packageStatusPostDto.Name">Status</label>
                    <input asp-for="@Model.packageStatusPostDto.Name" value="@Model.packageStatusGetDto.Name" class="form-control" placeholder="Status mətni...">
                    <span class="text text-danger" asp-validation-for="packageStatusPostDto.Name"></span>
                </div>

                <input hidden asp-for="@Model.packageStatusGetDto.Id" value="@Model.packageStatusGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>


