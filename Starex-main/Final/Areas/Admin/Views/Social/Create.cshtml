@model SocialPostDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosial Şəbəkə</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Name">Ad</label>
                    <input asp-for="Name" class="form-control" placeholder=" Sosial Şəbəkə adını daxil edin...">
                    <span class="text text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon"></label>
                    <input asp-for="Icon" class="form-control" placeholder=" Şəbəkə İconu daxil edin...">
                    <span class="text text-danger" asp-validation-for="Icon"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Url"></label>
                    <input asp-for="Url" class="form-control" placeholder=" Urli daxil edin...">
                    <span class="text text-danger" asp-validation-for="Url"></span>
                </div>
                @foreach (SettingGetDto setting in ViewBag.setting)
                {
                    <input hidden asp-for="SettingId" value="@setting.Id" />

                }
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>
