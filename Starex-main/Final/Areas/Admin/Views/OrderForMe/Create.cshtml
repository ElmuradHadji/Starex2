@model OrderForMePostDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bağlama</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="ProductUrl"></label>
                    <input asp-for="ProductUrl" class="form-control" placeholder=" Linki  daxil edin...">
                    <span class="text text-danger" asp-validation-for="ProductUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCount"></label>
                    <input asp-for="ProductCount" class="form-control" placeholder=" Məhsul Sayını daxil edin...">
                    <span class="text text-danger" asp-validation-for="ProductCount"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductColor"></label>
                    <input asp-for="ProductColor" class="form-control" placeholder=" Məhsul Rəngini daxil edin...">
                    <span class="text text-danger" asp-validation-for="ProductColor"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductSize"></label>
                    <input asp-for="ProductSize" class="form-control" placeholder="  Məhsul Ölçüsünü daxil edin...">
                    <span class="text text-danger" asp-validation-for="ProductSize"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductPrice"></label>
                    <input asp-for="ProductPrice" class="form-control" placeholder="  Məhsul Qiymətini daxil edin...">
                    <span class="text text-danger" asp-validation-for="ProductPrice"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InternalCargoPrice"></label>
                    <input asp-for="InternalCargoPrice" class="form-control" placeholder="  Daxili Kargo qiymətini daxil edin...">
                    <span class="text text-danger" asp-validation-for="InternalCargoPrice"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note"></label>
                    <input asp-for="Note" class="form-control" placeholder="  Qeyd...">
                    <span class="text text-danger" asp-validation-for="Note"></span>
                </div>

                
                @*<div class="form-group">
                    <label asp-for="ProductPrice">Valyuta</label>
                    <select asp-for="CostCurrencyId" class="form-control">
                        <option>
                            Valyutanı Seç
                        </option>
                        @foreach (var currency in ViewBag.currencies)
                        {
                            <option value="@currency.Id">@currency.Name</option>
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="CostCurrencyId"></span>
                </div>*@

                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>