@model BranchUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xarici anbar</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="branchPostDto.Adress"></label>
                    <input asp-for="branchPostDto.Adress" value="@Model.branchGetDto.Adress" class="form-control" placeholder=" Adress başlığını daxil edin...">
                    <span class="text text-danger" asp-validation-for="branchPostDto.Adress"></span>
                </div>
                <div class="form-group">
                    <label asp-for="branchPostDto.Name"></label>
                    <input asp-for="branchPostDto.Name" value="@Model.branchGetDto.Name" class="form-control" placeholder=" Filial adını daxil edin...">
                    <span class="text text-danger" asp-validation-for="branchPostDto.Name"></span>
                </div>
            
                <div class="form-group">
                    <label asp-for="branchPostDto.City"></label>
                    <input asp-for="branchPostDto.City" value="@Model.branchGetDto.City" class="form-control" placeholder=" Şəhəri daxil edin...">
                    <span class="text text-danger" asp-validation-for="branchPostDto.City"></span>
                </div>
             
                <div class="form-group">
                    <label asp-for="branchPostDto.PackageCapasity"></label>
                    <input asp-for="branchPostDto.PackageCapasity" value="@Model.branchGetDto.PackageCapasity" class="form-control" placeholder=" Bağlama limitini daxil edin...">
                    <span class="text text-danger" asp-validation-for="branchPostDto.PackageCapasity"></span>
                </div>
                <div class="form-group">
                    <label asp-for="branchPostDto.CountryId">Ölkə</label>
                    <select asp-for="branchPostDto.CountryId" class="form-control">
                        <option>
                            Ölkəni Seç
                        </option>
                        @foreach (var country in ViewBag.countries)
                        {
                            if (country.Id == Model.branchGetDto.CountryId)
                            {
                                <option selected value="@country.Id">@country.Name</option>

                            }
                            if (country.Id != Model.branchGetDto.CountryId)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="branchPostDto.CountryId"></span>
                </div>
                <input hidden asp-for="branchGetDto.Id" value="@Model.branchGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>


