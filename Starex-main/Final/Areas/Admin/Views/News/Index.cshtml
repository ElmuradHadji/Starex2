@model List<NewsGetDto>
@{
    ViewData["Title"] = "Xəbərlər";
    int count = 1;
}
<div class="grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xəbərlər</h4>
            <p class="card-description">
                <a type="submit" class="btn btn-success" asp-action="Create"><i class="mdi mdi-plus"></i></a>
            </p>
            <div class="table-responsive">
                @if (Model.Count is 0)
                {
                    <partial>Məlumat tapılmadı!</partial>
                }
                else
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Şəkil</th>
                                <th>Başlıq</th>
                                <th>Məzmun</th>
                                <th>Yaradıldı</th>
                                <th>Son dəyiş.</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td><img src="~/assets/images/@item.Image" alt="news" /></td>
                                    <td>@item.Title</td>
                                    @if (item.Description.Length > 30)
                                    {
                                        <td>@item.Description.Substring(0,30)</td>
                                    }
                                    @if (item.Description.Length <= 30)

                                    {
                                        <td>@item.Description</td>
                                    }
                                    <td>@item.CreatedTime</td>
                                    <td>@item.UpdatedTime</td>

                                    <td>

                                        <a class=" btn btn-light" asp-action="Update" asp-route-id="@item.Id"><i class="mdi mdi-pencil"></i></a>
                                        <a class=" btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="mdi mdi-delete-variant"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

