@model DeliveryPointUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xarici anbar</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="deliveryPointPostDto.Adress"></label>
                    <input asp-for="deliveryPointPostDto.Adress" value="@Model.deliveryPointGetDto.Adress" class="form-control" placeholder=" Adress başlığını daxil edin...">
                    <span class="text text-danger" asp-validation-for="deliveryPointPostDto.Adress"></span>
                </div>
                <div class="form-group">
                    <label asp-for="deliveryPointPostDto.Name"></label>
                    <input asp-for="deliveryPointPostDto.Name" value="@Model.deliveryPointGetDto.Name" class="form-control" placeholder=" Filial adını daxil edin...">
                    <span class="text text-danger" asp-validation-for="deliveryPointPostDto.Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="deliveryPointPostDto.City"></label>
                    <input asp-for="deliveryPointPostDto.City" value="@Model.deliveryPointGetDto.City" class="form-control" placeholder=" Şəhəri daxil edin...">
                    <span class="text text-danger" asp-validation-for="deliveryPointPostDto.City"></span>
                </div>

                <div class="form-group">
                    <label asp-for="deliveryPointPostDto.PackageCapasity"></label>
                    <input asp-for="deliveryPointPostDto.PackageCapasity" value="@Model.deliveryPointGetDto.PackageCapasity" class="form-control" placeholder=" Bağlama limitini daxil edin...">
                    <span class="text text-danger" asp-validation-for="deliveryPointPostDto.PackageCapasity"></span>
                </div>
                <div class="form-group">
                    <label asp-for="deliveryPointPostDto.CountryId">Ölkə</label>
                    <select asp-for="deliveryPointPostDto.CountryId" class="form-control">
                        <option>
                            Ölkəni Seç
                        </option>
                        @foreach (var country in ViewBag.countries)
                        {
                            if (country.Id == Model.deliveryPointGetDto.CountryId)
                            {
                                <option selected value="@country.Id">@country.Name</option>

                            }
                            if (country.Id != Model.deliveryPointGetDto.CountryId)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="deliveryPointPostDto.CountryId"></span>
                </div>

                <div class="form-group">
                    <label asp-for="deliveryPointPostDto.BranchId">Filial</label>
                    <select asp-for="deliveryPointPostDto.BranchId" class="form-control">
                        <option>
                            Filialı Seç
                        </option>
                        @foreach (var branch in ViewBag.branches)
                        {
                            if (branch.Id == Model.deliveryPointGetDto.BranchId)
                            {
                                <option selected value="@branch.Id">@branch.Name</option>

                            }
                            if (branch.Id != Model.deliveryPointGetDto.BranchId)
                            {
                                <option value="@branch.Id">@branch.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="deliveryPointPostDto.BranchId"></span>
                </div>

                <input hidden asp-for="deliveryPointGetDto.Id" value="@Model.deliveryPointGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>


