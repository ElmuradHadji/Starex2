@model ServiceUpdateDto
@{
    ViewData["Title"] = "Xidmətlər";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description"> Basic form layout </p>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="@Model.servicePostDto.Title"></label>
                    <input asp-for="@Model.servicePostDto.Title" value="@Model.serviceGetDto.Title" class="form-control" placeholder="Başlıq mətni...">
                    <span class="text text-danger" asp-validation-for="servicePostDto.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.servicePostDto.Description"></label>
                    <input asp-for="@Model.servicePostDto.Description" value="@Model.serviceGetDto.Description" class="form-control" placeholder="Açıqlama...">
                    <span class="text text-danger" asp-validation-for="servicePostDto.Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.servicePostDto.formFile">Şəkil</label>
                    <input asp-for="@Model.servicePostDto.formFile" accept="image/*" class="form-control" placeholder="Haqqımızda mətni...">
                    <span class="text text-danger" asp-validation-for="servicePostDto.formFile"></span>

                </div>
                <input hidden asp-for="@Model.serviceGetDto.Id" value="@Model.serviceGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
            <div class="mt-2">
                <img style="height:250px; width:250px;" src="~/assets/images/@Model.serviceGetDto.Image" alt="Haqqında_Şəkil" />
            </div>
        </div>
    </div>
</div>

