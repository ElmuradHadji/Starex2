@model WareHouseUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xarici anbar</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.AdressTitle"></label>
                    <input asp-for="wareHousePostDTo.AdressTitle" value="@Model.wareHouseGetDto.AdressTitle" class="form-control" placeholder=" Adress başlığını daxil edin...">
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.AdressTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.Adress1"></label>
                    <input asp-for="wareHousePostDTo.Adress1" value="@Model.wareHouseGetDto.Adress1" class="form-control" placeholder=" Adress1`i daxil edin...">
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.AdressTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.Province"></label>
                    <input asp-for="wareHousePostDTo.Province" value="@Model.wareHouseGetDto.Province" class="form-control" placeholder=" Əyaləti daxil edin...">
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.Province"></span>
                </div>
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.ZIP"></label>
                    <input asp-for="wareHousePostDTo.ZIP" value="@Model.wareHouseGetDto.ZIP" class="form-control" placeholder=" ZIP codu daxil edin...">
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.ZIP"></span>
                </div>
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.City"></label>
                    <input asp-for="wareHousePostDTo.City" value="@Model.wareHouseGetDto.City" class="form-control" placeholder=" Şəhəri daxil edin...">
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.City"></span>
                </div>
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.District"></label>
                    <input asp-for="wareHousePostDTo.District" value="@Model.wareHouseGetDto.District" class="form-control" placeholder=" Ərazini daxil edin...">
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.District"></span>
                </div>
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.PackageCapasity"></label>
                    <input asp-for="wareHousePostDTo.PackageCapasity" value="@Model.wareHouseGetDto.PackageCapasity" class="form-control" placeholder=" Bağlama limitini daxil edin...">
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.PackageCapasity"></span>
                </div>
                <div class="form-group">
                    <label asp-for="wareHousePostDTo.CountryId">Öləkə</label>
                    <select asp-for="wareHousePostDTo.CountryId" class="form-control">
                        <option>
                            Ölkəni Seç
                        </option>
                        @foreach (var country in ViewBag.countries)
                        {
                            if (country.Id == Model.wareHouseGetDto.CountryId)
                            {
                                <option selected value="@country.Id">@country.Name</option>

                            }
                            if (country.Id != Model.wareHouseGetDto.CountryId)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="wareHousePostDTo.CountryId"></span>
                </div>
                <input hidden asp-for="wareHouseGetDto.Id" value="@Model.wareHouseGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>
