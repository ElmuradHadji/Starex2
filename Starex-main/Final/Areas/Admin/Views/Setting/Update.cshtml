@model SettingUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ayarlar</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Logo">Ad</label>
                    <input asp-for="Logo" value="@Model.Logo" class="form-control" placeholder=" Logonu daxil edin...">
                    <span class="text text-danger" asp-validation-for="Logo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adress"></label>
                    <input asp-for="Adress" value="@Model.Adress" class="form-control" placeholder=" Adressi daxil edin...">
                    <span class="text text-danger" asp-validation-for="Adress"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Telefon</label>
                    <input asp-for="Phone" value="@Model.Phone" class="form-control" placeholder=" Telefonu daxil edin...">
                    <span class="text text-danger" asp-validation-for="Phone"></span>
                </div>
                <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>
