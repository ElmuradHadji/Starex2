@model PackageUpdateDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bağlama</h4>
            <div class="alert alert-dismissible alert-danger" asp-validation-summary="ModelOnly">
            </div>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="packagePostDto.Name"></label>
                    <input asp-for="packagePostDto.Name" value="@Model.packageGetDto.Name" class="form-control" placeholder=" Bağlama adını  daxil edin...">
                    <span class="text text-danger" asp-validation-for="packagePostDto.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="packagePostDto.Cost"></label>
                    <input asp-for="packagePostDto.Cost" value="@Model.packageGetDto.Cost" class="form-control" placeholder=" Məhsul Qiymətini daxil edin...">
                    <span class="text text-danger" asp-validation-for="packagePostDto.Cost"></span>
                </div>
                <div class="form-group">
                    <label asp-for="packagePostDto.OriginalTrackingId"></label>
                    <input asp-for="packagePostDto.OriginalTrackingId" value="@Model.packageGetDto.OriginalTrackingId" class="form-control" placeholder=" *****...">
                    <span class="text text-danger" asp-validation-for="packagePostDto.OriginalTrackingId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="packagePostDto.Weight"></label>
                    <input asp-for="packagePostDto.Weight" value="@Model.packageGetDto.Weight" class="form-control" placeholder=" Çəkini (kqla) daxil edin...">
                    <span class="text text-danger" asp-validation-for="packagePostDto.Weight"></span>
                </div>

                <div class="form-group">
                    <label asp-for="packagePostDto.CostCurrencyId">Valyuta</label>
                    <select asp-for="packagePostDto.CostCurrencyId" class="form-control">
                        <option>
                            Valyutanı Seç
                        </option>
                        @foreach (var currency in ViewBag.currencies)
                        {
                            if (currency.Id == Model.packageGetDto.CostCurrencyId)
                            {
                                <option selected value="@currency.Id">@currency.Name</option>

                            }
                            if (currency.Id != Model.packageGetDto.CostCurrencyId)
                            {
                                <option value="@currency.Id">@currency.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="packagePostDto.CostCurrencyId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="packagePostDto.packageStatusId">Status</label>
                    <select asp-for="packagePostDto.packageStatusId" class="form-control">
                        <option>
                            Statusu Seç
                        </option>
                        @foreach (var status in ViewBag.statuses)
                        {
                            if (status.Id == Model.packageGetDto.packageStatusId)
                            {
                                <option selected value="@status.Id">@status.Name</option>

                            }
                            if (status.Id != Model.packageGetDto.packageStatusId)
                            {
                                <option value="@status.Id">@status.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="packagePostDto.CostCurrencyId"></span>
                </div>

                <div class="form-group">
                    <label asp-for="packagePostDto.wareHouseId">Anbar</label>
                    <select asp-for="packagePostDto.wareHouseId" class="form-control">
                        <option>
                            Anbarı Seç
                        </option>
                        @foreach (var wareHouse in ViewBag.wareHouses)
                        {
                            if (wareHouse.Id == Model.packageGetDto.wareHouseId)
                            {
                                <option selected value="@wareHouse.Id">@wareHouse.Adress1</option>

                            }
                            if (wareHouse.Id != Model.packageGetDto.packageStatusId)
                            {
                                <option value="@wareHouse.Id">@wareHouse.Adress1</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="packagePostDto.CostCurrencyId"></span>
                </div>


                <input hidden asp-for="packageGetDto.Id" value="@Model.packageGetDto.Id" />
                <button type="submit" class="btn btn-success mr-2">Yadda saxla</button>
                <button class="btn btn-dark" asp-action="Index">Geri</button>
            </form>
        </div>
    </div>
</div>